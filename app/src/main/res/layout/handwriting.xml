<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/paint_view_bg"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/actionbar_background"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_56dp"
            android:background="@drawable/sketch_menu_bg_theme"
            android:clickable="true"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:scaleType="center"
            android:src="@drawable/ic_back" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_56dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_56dp"
            android:background="@drawable/sketch_menu_bg_theme"
            android:clickable="true"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:scaleType="center"
            android:src="@drawable/ic_delete_n_enable" />

        <ImageView
            android:id="@+id/undo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_56dp"
            android:background="@drawable/sketch_menu_bg_theme"
            android:clickable="true"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:scaleType="center"
            android:src="@drawable/regression_select_bg" />

        <ImageView
            android:id="@+id/redo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_56dp"
            android:background="@drawable/sketch_menu_bg_theme"
            android:clickable="true"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:scaleType="center"
            android:src="@drawable/regression_select_bg_remove" />

        <ImageView
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_56dp"
            android:background="@drawable/sketch_menu_bg_theme"
            android:clickable="true"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:scaleType="center"
            android:src="@drawable/save_select_bg" />

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.hihonor.android.magicx.app.penengine.view.HnHandWritingView
            android:id="@+id/hn_handwriting_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
                android:id="@+id/pb_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

    </FrameLayout>

</LinearLayout>